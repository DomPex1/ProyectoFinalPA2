@page "/cusuario"
<h3>Consulta de Usuarios</h3>

<div class="form-group row">
    <label for="filtro">Filtro</label>
    <div class="input-group  col-md-8">
        <select class="form-control" @bind="Filtro">
            <option value="" disabled selected>Seleccione un Criterio</option>
            <option value="Todo">Todo</option>
            <option value="Id">Id</option>
            <option value="Nombres">Nombres</option>
            <option value="Usuario">Usuario</option>
            <option value="Email">Email</option>
        </select>

        <div align="right" class="input-group col-md-6">
            <label for="criterio"> Criterio</label>
            <input type="search" class="form-control" @bind-value="Criterio" />
        </div>
        <button type="button" class="btn btn-outline-success" @onclick="Buscar">Buscar</button>
    </div>
</div>


<div class="form-group row">
    <input class="ml-1" type="checkbox" @bind-value="BuscarFecha" id="defaultCheck1"> Filtrar por Fecha
    <div class="input-group  col-sm-6">
        <label for="DesdeFecha" class="col-md-2">Desde</label>
        <input id="DesdeFecha" type="date" @bind-value="DesdeFecha" class="form-control col-6 " input />
        <label for="HastaFechaInput" class="col-md-2">Hasta</label>
        <input type="date" Id="HastaFechaInput" @bind-value="HastaFecha" class="form-control col-6" />
    </div>
</div>


<table class="table">
    <thead class="thead-light">
        <tr>
            <th>Usuario Id</th>
            <th>Nombres</th>
            <th>Nivel de Usuario</th>
            <th>Usuario</th>
            <th>Email</th>
            <th>Fecha Ingreso</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in lista)
        {
        <tr>
            <th>@item.UsuarioId</th>
            <th>@item.Nombres</th>
            <th>@item.NivelUsuario</th>
            <th>@item.Usuario</th>
            <th>@item.Email</th>
            <th>@item.FechaCreacion.ToString("dd/MM/yyyy")</th>
            <td><a class="btn btn-sm btn bth-primary" href="estudiante/@item.UsuarioId">Ver</a></td>
        </tr>
        }
    </tbody>
</table>

<h5 class="text-success">@mensaje</h5>


@code {

    private List<Usuarios> lista { get; set; }
    public  ControllersUsuario controller = new ControllersUsuario();

    private string Filtro { get; set; }
    private string Criterio { get; set; }
    private string mensaje;

    public bool BuscarFecha { get; set; }
    public DateTime DesdeFecha { get; set; }
    public DateTime HastaFecha { get; set; }


    protected override void OnInitialized()
    {
        lista = new List<Usuarios>();
        DesdeFecha = DateTime.Now;
        HastaFecha = DateTime.Now;
    }

    private void Buscar()
    {

        try
        {
            if (Filtro == null)
            {
                mensaje = "Debe seleccionar un Criterio";
            }
            else
            {
                lista = controller.GetList(a => true);

                if (lista.Count == 0)
                {
                    mensaje = "No hay Usuarios Registrado";
                }
                else
                {
                    mensaje = "";
                    switch (Filtro)
                    {
                        case "Todo":
                            lista = controller.GetList(e => true);
                            break;
                        case "Id":
                            lista = controller.GetList(e => e.UsuarioId == Convert.ToInt32(Criterio));
                            break;
                        case "Nombres":
                            lista = controller.GetList(e => e.Nombres == Criterio);
                            break;
                        case "Usuario":
                            lista = controller.GetList(e => e.Usuario == Criterio);
                            break;
                        case "Email":
                            lista = controller.GetList(e => e.Usuario == Criterio);
                            break;
                    }
                    if (BuscarFecha == true)
                    {
                        lista = controller.GetList(p => p.FechaCreacion >= DesdeFecha.Date && p.FechaCreacion <= HastaFecha.Date);
                    }
                }
            }
        }
        catch (Exception)
        {
            throw;
        }
    }
}