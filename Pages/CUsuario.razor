@page "/CUsuario"
@page  "/CUsuario/{I:int}"


<div class="card bg-info text-light">
        <div class="card-body ">
            <h3>Consulta de Usuarios</h3>

            <div class="form-inline">

                <label for="filtro">Filtro</label>
                <div class="form-group mx-sm-3 mb-2">
                    <select class="form-control" @bind="Filtro">
                        <option value="" disabled selected>Seleccione un Criterio</option>
                        <option value="Todo">Todo</option>
                        <option value="Id">Id</option>
                        <option value="Nombres">Nombres</option>
                        <option value="Usuario">Usuario</option>
                        <option value="Email">Email</option>
                    </select>
                </div>
                <label for="criterio"> Criterio</label>
                <div class="form-group mx-sm-3 mb-2">

                    <input type="search" class="form-control" @bind-value="Criterio" />
                </div>

                <button type="button" class="btn btn-success mx-sm-3 mb-2" @onclick="Buscar">Buscar</button>

            </div>


            <div class="form-inline">
                <input class="mx-sm-3 mb-2" type="checkbox" @bind-value="BuscarFecha" id="BuscarFecha"> Filtrar por Fecha
                
                <div class="form-group">
                    <label for="DesdeFecha" >Desde</label>
                    <input id="DesdeFecha" type="date" @bind-value="DesdeFecha" class="form-control mx-sm-3 mb-2 " input />
                    
                    <label for="HastaFechaInput">Hasta</label>
                    <input type="date" Id="HastaFechaInput" @bind-value="HastaFecha" class="form-control mx-sm-3 mb-2" />
                </div>
            </div>
            <br/>

            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th>Usuario Id</th>
                        <th>Nombres</th>
                        <th>Nivel de Usuario</th>
                        <th>Usuario</th>
                        <th>Email</th>
                        <th>Fecha Ingreso</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in lista)
                    {
                        <tr>
                            <th>@item.UsuarioId</th>
                            <th>@item.Nombres</th>
                            <th>@item.NivelUsuario</th>
                            <th>@item.Usuario</th>
                            <th>@item.Email</th>
                            <th>@item.FechaCreacion.ToString("dd/MM/yyyy")</th>
                            <td><a class="btn btn-primary" href="RUsuarios/@item.UsuarioId">Ver</a></td>

                        </tr>
                    }
                </tbody>
            </table>
            <nav aria-label="...">
                <ul class="pagination pagination-lg">
                    @for (int i = 1; i <= totaldepaginas; i++)
                    {
                        <li class="page-item"><a class="page-link" @onclick="OnInitialized" href="CUsuario/@i">@i</a></li>
                    }

                </ul>
            </nav>

            <h5>@mensaje</h5>

        </div>
    </div>
@code {

    private List<Usuarios> lista { get; set; }
    public ControllersUsuario controller = new ControllersUsuario();


    [Parameter]
    public int I { get; set; }
    private int Contador { get; set; }
    private int contCiclo { get; set; }

    Paginacion paginacion = new Paginacion();
    public double totaldepaginas { get; set; }

    Contexto Contexto = new Contexto();
    double conteo = 0;


    private string Filtro { get; set; }
    private string Criterio { get; set; }
    private string mensaje;


    public bool BuscarFecha { get; set; }
    public DateTime DesdeFecha { get; set; }
    public DateTime HastaFecha { get; set; }

 

    protected override void OnInitialized()
    {

        lista = new List<Usuarios>();


        DesdeFecha = DateTime.Now;
        HastaFecha = DateTime.Now;

    }

    private void Buscar()
    {

        try
        {
           

            if (Filtro == null)
            {
                Filtro = "Todo";

            }

            lista = controller.GetList(a => true);

            if (lista.Count == 0)
            {
                mensaje = "No hay usuarios registrado";
            }
            else
            {
                mensaje = "";
                switch (Filtro)
                {
                    case "Todo":
                        lista = controller.GetList(e => true);
                        break;
                    case "Id":
                        lista = controller.GetList(e => e.UsuarioId == Convert.ToInt32(Criterio));
                        break;
                    case "Nombres":
                        lista = controller.GetList(e => e.Nombres == Criterio);
                        break;
                    case "Usuario":
                        lista = controller.GetList(e => e.Usuario == Criterio);
                        break;
                    case "Email":
                        lista = controller.GetList(e => e.Usuario == Criterio);
                        break;
                }
                if (BuscarFecha == true)
                {
                    lista = controller.GetList(p => p.FechaCreacion >= DesdeFecha.Date && p.FechaCreacion <= HastaFecha.Date);
                }
            }

        }
        catch (Exception)
        {
            throw;
        }
    }

}