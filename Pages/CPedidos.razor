@page "/cusuario"
<h3>Consulta de Usuarios</h3>

<div class="form-group row">
    <label for="filtro">Filtro</label>
    <div class="input-group  col-sm-10">
        <select class="form-control" @bind="Filtro">
            <option value="" disabled selected>Seleccione un Criterio</option>
            <option value="Todo">Todo</option>
            <option value="Id">Id</option>
            <option value="Cliente">Cliente</option>
            <option value="FormaPedido">FormaPedido</option>
            <option value="Total">Total</option>
        </select>

        <div align="right" class="input-group col-md-8">
            <label for="criterio"> Criterio&nbsp;&nbsp; </label>
            <input type="search" class="form-control" @bind-value="Criterio" />
        </div>
        <button type="button" class="btn btn-outline-success" @onclick="Buscar">Buscar</button>
    </div>
</div>

<div class="form-group row">
    <input class="ml-1" type="checkbox" @bind-value="BuscarFecha" id="defaultCheck1"> Filtrar por Fecha
    <div class="input-group  col-sm-6">
        <!--Desde-->
        <label for="DesdeFecha" class="col-auto">Desde</label>
        <input id="DesdeFecha" type="date" @bind-value="DesdeFecha" class="form-control col-6 " input />
        <!--Hasta-->
        <label for="HastaFechaInput" class="col-auto">&nbsp;&nbsp;Hasta</label>
        <input type="date" Id="HastaFechaInput" @bind-value="HastaFecha" class="form-control col-6" />
    </div>
</div>


<table class="table">
    <thead class="thead-light">
        <tr>
            <th>PedidosId</th>
            <th>Cliente</th>
            <th>Forma Pedido</th>
            <th>SubTotal</th>
            <th>ITBIS</th>
            <th>Total</th>
            <th>Fecha Ingreso</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in lista)
        {
            <tr>
                <th>@item.</th>
                <th>@item.Nombres</th>
                <th>@item.NivelUsuario</th>
                <th>@item.Usuario</th>
                <th>@item.Email</th>
                <th>@item.FechaCreacion.ToString("dd/MM/yyyy")</th>
                <td><a class="btn btn-sm btn-outline-primary" href="estudiante/@item.UsuarioId">Ver</a></td>
            </tr>
        }
    </tbody>
</table>

<h5 class="text-success">@mensaje</h5>


@code {

    private List<Pedidos> lista { get; set; }

    private string Filtro { get; set; }
    private string Criterio { get; set; }
    private string mensaje;

    public bool BuscarFecha { get; set; }
    public DateTime DesdeFecha { get; set; }
    public DateTime HastaFecha { get; set; }


    protected override void OnInitialized()
    {
        lista = new List<Pedidos>();
        DesdeFecha = DateTime.Now;
        HastaFecha = DateTime.Now;
    }

    private void Buscar()
    {
        ControllersPedido controller = new ControllersPedido();

        try
        {
            if (Filtro == null)
            {
                mensaje = "Debe seleccionar un Criterio";
            }
            else
            {
                lista = controller.GetList(a => true);

                if (lista.Count == 0)
                {
                    mensaje = "No hay Pedidos Registrado";
                }
                else
                {
                    mensaje = "";
                    switch (Filtro)
                    {
                        case "Todo":
                            lista = controller.GetList(e => true);
                            break;
                        case "Id":
                            lista = controller.GetList(e => e.PedidosId == Convert.ToInt32(Criterio));
                            break;
                        case "Cliente":
                            lista = controller.GetList(e => e.Cliente == Criterio);
                            break;
                        case "FormaPedido":
                            lista = controller.GetList(e => e.FormaPedido == Criterio);
                            break;
                        case "Email":
                            lista = controller.GetList(e => e.Usuario == Criterio);
                            break;
                    }
                    if (BuscarFecha == true)
                    {
                        lista = controller.GetList(p => p.FechaCreacion >= DesdeFecha.Date && p.FechaCreacion <= HastaFecha.Date);
                    }
                }
            }
        }
        catch (Exception)
        {
            throw;
        }
    }
}